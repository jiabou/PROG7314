<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- ===========================
         SECTION 1: Toolbar (Header)
         ============================ -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/profileToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_red"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Profile"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_profile_w" />

    <!-- ===========================
         SECTION 2: Profile Overview
         ============================ -->
    <LinearLayout
        android:id="@+id/section_profile_overview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background_red"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_profile_overview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROFILE OVERVIEW"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- ===========================
         SECTION 3: Username / Calorie
         ============================ -->
    <LinearLayout
        android:id="@+id/section_user_calorie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_red"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profile row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_profile_pic"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@android:drawable/sym_def_app_icon"
                android:scaleType="centerCrop"
                android:contentDescription="Profile picture"
                android:background="#FFFFFF"
                android:padding="4dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user@email.com"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Streak counter -->
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_streak_frame"
                android:padding="6dp"
                android:layout_marginStart="8dp">

                <TextView
                    android:id="@+id/tv_streak_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_streak_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STREAK"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Calorie progress -->
        <TextView
            android:id="@+id/tv_calorie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DAILY CALORIE COUNT"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <ProgressBar
            android:id="@+id/progress_calories"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:progress="30"
            android:max="100"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:progressTint="@color/main_background_red"
            android:progressBackgroundTint="@color/progress_bar"/>

        <TextView
            android:id="@+id/tv_calories_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250 Cals"
            android:textColor="@color/white"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- ===========================
         SECTION 4: Images
         ============================ -->
    <LinearLayout
        android:id="@+id/section_images"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/main_background_red"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_images_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMAGES"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_images"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical" />
    </LinearLayout>

</LinearLayout>
