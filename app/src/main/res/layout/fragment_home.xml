<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/settingsToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_red"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="@drawable/ic_home_w"
        app:title="Home"
        app:titleTextColor="@color/white" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- EXERCISES SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_background_red"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Section Title -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="EXERCISES"
                        android:textAllCaps="true"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvExercisesViewAll"
                        android:layout_width="67dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_streak_frame"
                        android:backgroundTint="@color/black"
                        android:text="View all"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>

                <!-- Row of 5 exercise buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <!-- Legs -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/btnLegs"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginHorizontal="6dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/bg_exe_frame"
                            android:backgroundTint="@color/black"
                            android:contentDescription="Legs"
                            android:padding="8dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/leg" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Legs"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Arms -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/btnArms"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginHorizontal="6dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/bg_exe_frame"
                            android:backgroundTint="@color/black"
                            android:contentDescription="Arms"
                            android:padding="8dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/arm" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Arms"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Chest -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/btnChest"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginHorizontal="6dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/bg_exe_frame"
                            android:backgroundTint="@color/black"
                            android:contentDescription="Chest"
                            android:padding="8dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/chest" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Chest"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Back -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/btnBack"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginHorizontal="6dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/bg_exe_frame"
                            android:backgroundTint="@color/black"
                            android:contentDescription="Back"
                            android:padding="8dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/back" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Back"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Abs -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/btnAbs"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:layout_marginHorizontal="6dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/bg_exe_frame"
                            android:backgroundTint="@color/black"
                            android:contentDescription="Abs"
                            android:padding="8dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/abs" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Abs"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- PREVIOUS IMAGES SECTION -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="446dp"
                android:background="@color/background_red"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PREVIOUS IMAGES"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="16sp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/tvImagesViewAll"
                        android:layout_width="66dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_streak_frame"
                        android:text="View all"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="14sp" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvImages"
                    android:layout_width="match_parent"
                    android:layout_height="392dp"
                    android:layout_marginTop="12dp"
                    android:clipToPadding="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />
            </LinearLayout>

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavigationView"
                android:name="androidx.navigation.material.BottomNavigationView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:menu="@menu/bottom_nav_menu"
                tools:layout_editor_absoluteX="0dp" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
