<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background_red">

    <!-- Scrollable content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Toolbar -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/CaloriesToolbar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/background_red"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@drawable/ic_food"
                app:navigationIconTint="@android:color/white"
                app:title="Calories"
                app:titleCentered="true"
                app:titleTextColor="@android:color/white" />

            <!-- Add Food Intake Section -->
            <LinearLayout
                android:id="@+id/addFoodLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_margin="16dp"
                android:background="@drawable/rounded_view"
                app:layout_constraintTop_toBottomOf="@+id/CaloriesToolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Food Intake"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="12dp"
                    android:textColor="@color/white" />

                <EditText
                    android:id="@+id/etFoodName"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Food/Drink Name"
                    android:inputType="textCapWords"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_background_framed"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />

                <EditText
                    android:id="@+id/etCalories"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:hint="Calories"
                    android:inputType="number"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_background_framed"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSaveIntake"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Save"
                    android:textColor="@android:color/white"
                    android:background="@drawable/bg_background_framed"
                    app:backgroundTint="@null"/>
            </LinearLayout>

            <!-- Search Section -->
            <LinearLayout
                android:id="@+id/searchSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:orientation="vertical"
                android:background="@drawable/rounded_view"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@+id/addFoodLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Label -->
                <TextView
                    android:id="@+id/txtEnterFoodOrDrink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Search for a Food or Drink:"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <!-- Input + Button Row -->
                <LinearLayout
                    android:id="@+id/searchRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/edtType"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="0.8"
                        android:hint="Enter Food or Drink"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/white"
                        android:textColorHint="@color/white"
                        android:background="@drawable/bg_background_framed"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btnAddFood"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="0.2"
                        android:text="+"
                        android:textSize="22sp"
                        android:textColor="@android:color/white"
                        android:background="@drawable/bg_background_framed"
                        app:backgroundTint="@null"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Results Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/main_background_red"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@+id/searchSection"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <!-- Header Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:text="Search Results"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTotalSearches"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="end"
                        android:text="Total: 0"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Food List -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/foodListRecyclerView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
