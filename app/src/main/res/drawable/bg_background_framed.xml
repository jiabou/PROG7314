<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Keep the red background fill -->
    <solid android:color="@color/main_background_red" />

    <!-- Add a white border -->
    <stroke
        android:width="2dp"
        android:color="@android:color/white" />

    <!-- Rounded corners (optional) -->
    <corners android:radius="12dp" />

    <!-- Inner padding so text/icons donâ€™t touch the border -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
