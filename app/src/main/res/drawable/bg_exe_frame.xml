<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- White border -->
    <stroke
        android:width="2dp"
        android:color="@android:color/white" />

    <!-- Transparent background inside -->
    <solid android:color="@android:color/transparent" />

    <!-- Optional padding -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>

