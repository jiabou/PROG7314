<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Profile">

    <!-- ============================
             SECTION 1: Toolbar (Header)
             ============================ -->

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/profileToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_red"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:navigationIcon="@drawable/ic_profile_w"
        app:title="Profile"
        app:titleTextColor="@android:color/white" />

    <!-- ============================
         SECTION 2: Profile Overview
         ============================ -->

    <LinearLayout
        android:id="@+id/sectionProfileOverview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main_background_red"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvProfileOverviewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROFILE OVERVIEW"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- ============================
         SECTION 3: Username / Calorie
         ============================ -->
    <LinearLayout
        android:id="@+id/sectionUserCalorie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_red"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Profile row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgProfilePic"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="#FFFFFF"
                android:contentDescription="Profile picture"
                android:padding="4dp"
                android:scaleType="centerCrop"
                android:src="@android:drawable/sym_def_app_icon" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/tvUsername"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="user@email.com"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <ImageButton
                    android:id="@+id/btnSettingsNav"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:contentDescription="Go to settings"
                    app:backgroundTint="@android:color/transparent"
                    app:srcCompat="@drawable/ic_settings_w" />
            </LinearLayout>

            <!-- Streak counter -->
            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_streak_frame"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="6dp">

                <TextView
                    android:id="@+id/tvStreakValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="14"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvStreakLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="STREAK"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Calorie progress -->
        <TextView
            android:id="@+id/tvCalorieTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="DAILY CALORIE COUNT"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/progressCalories"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:max="100"
            android:progress="30"
            android:progressBackgroundTint="@color/progress_bar"
            android:progressTint="@color/main_background_red" />

        <TextView
            android:id="@+id/tvCaloriesValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="250 Cals"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- ============================
         SECTION 4: Images
         ============================ -->
    <LinearLayout
        android:id="@+id/sectionImages"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/main_background_red"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvImagesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMAGES"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewImages"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical" />

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu"
        tools:layout_editor_absoluteX="0dp" />

</LinearLayout>